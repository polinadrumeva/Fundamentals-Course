@{
	ViewBag.Title = "Numbers 1..." + ViewBag.Count;
	var count = (int)ViewBag.Count;
}

<ul>
	@if (count != 0)
	{
		<h2>@ViewBag.Title</h2>
		@for (int i = 1; i <= count; i++)
		{
			<li>@i</li>
		}
		
	}
	else
	{
		<h2>Numbers 1...</h2>
	}
	
</ul>

<form asp-controller="Home" asp-action="NumbersToN" method="post">
    <div class="row">
        <div class="col-2">
            <input class="form-control" type="number" min="0" step="1" name="count"/>
        </div>
        <div class="col-2">
            <button class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>